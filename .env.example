# Environment Variables for Docker Compose
# Copy this file to .env and update the values

# ===========================================
# PostgreSQL Configuration
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=mindcubes
POSTGRES_PORT=5432

# ===========================================
# MongoDB Atlas Connection
# ===========================================
MONGODB_URI=your-mongodb-uri-here

# ===========================================
# Authentication
# ===========================================
JWT_SECRET=change-this-to-a-secure-secret-key
JWT_EXPIRES_IN=7d

# ===========================================
# n8n Configuration
# ===========================================
N8N_API_URL=http://host.docker.internal:5678/api/v1
N8N_API_KEY=your-n8n-api-key-here
N8N_WEBHOOK_URL=http://host.docker.internal:5678

# ===========================================
# Application Ports
# ===========================================
BACKEND_PORT=5001
FRONTEND_PORT=3000

# ===========================================
# Frontend Configuration
# ===========================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:5001/api/v1
NEXT_PUBLIC_BACKEND_URL =http://localhost:5001

# ===========================================
# Environment
# ===========================================
NODE_ENV=production

# ===========================================
# AI Engine Configuration
# ===========================================
AI_ENGINE_PORT=8000

# Default Provider: openai, anthropic, ollama, local
AI_DEFAULT_PROVIDER=ollama

# OpenAI (optional - set your API key)
OPENAI_API_KEY=
OPENAI_MODEL_NAME=gpt-4o-mini

# Anthropic (optional - set your API key)
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL_NAME=claude-3-5-sonnet-20240620

# Ollama (recommended for local - runs in Docker)
OLLAMA_PORT=11434
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_DEFAULT_MODEL=llama3.2
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=512

# Local HuggingFace Model (fallback - downloads automatically)
LOCAL_MODEL_NAME=TinyLlama/TinyLlama-1.1B-Chat-v1.0
LOCAL_MODEL_4BIT=true
